	<jaxws:endpoint id="validateTokenWS" address="/ValidateToken">
		<jaxws:implementor>
			<ref bean="validateTokenService" />
		</jaxws:implementor>
	</jaxws:endpoint>

	<jaxws:endpoint id="validateKeyWS" address="/ValidateKey">
		<jaxws:implementor>
			<ref bean="validateKeyService" />
		</jaxws:implementor>
	</jaxws:endpoint>

	<jaxws:endpoint id="administrationCUWS" address="/AdministrationCU">
		<jaxws:implementor>
			<ref bean="adminCUService" />
		</jaxws:implementor>
	</jaxws:endpoint>

	<jaxws:endpoint id="administrationWS" address="/Administration">
		<jaxws:implementor>
			<ref bean="administrationService" />
		</jaxws:implementor>
	</jaxws:endpoint>

	<jaxws:endpoint id="authenticationWS" address="/Authentication">
		<jaxws:implementor>
			<ref bean="authenticationService" />
		</jaxws:implementor>
	</jaxws:endpoint>

	<jaxws:endpoint id="getPreferencesWS" address="/AdministrationV2">
		<jaxws:implementor>
			<ref bean="getPreferencesService" />
		</jaxws:implementor>
	</jaxws:endpoint>

	<jaxws:endpoint id="panQueryWS" address="/PanQueryID">
		<jaxws:implementor>
			<ref bean="panQueryService" />
		</jaxws:implementor>
	</jaxws:endpoint>

</beans>